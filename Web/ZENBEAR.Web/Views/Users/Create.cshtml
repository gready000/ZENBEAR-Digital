@model ZENBEAR.Web.ViewModels.Users.CreateUserInputModel

<link rel="stylesheet" href="~/css/createForm.css" asp-append-version="true" />

<div class="container">
    <!-- code here -->
    <div class="card">
        <div class="card-image">
            <h2 class="card-heading">
                <small>Let's Add New User</small>
            </h2>
        </div>
        <form method="post" class="card-form">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name *" value="" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name *" value="" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password *" value="" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" type="email" class="form-control" placeholder="Your Email *" value="" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select id="Department" asp-for="Department" class="form-control">
                    <option value="" selected="selected">Select Department</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select id="Jobtitle" asp-for="JobTitle" class="form-control">
                    <option value="" selected="selected">Select Jobtitle</option>
                </select>
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Role" class="form-control" asp-items="@Model.Roles">
                    <option value="" selected="selected">Select Role</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="maxl">
                    <label class="radio inline">
                        <input type="radio" asp-for="Location" id="Office" value="Office" checked>
                        <span> Office </span>
                    </label>
                    <label class="radio inline">
                        <input type="radio" asp-for="Location" id="Headquater" value="Headquater">
                        <span>Head Quater </span>
                    </label>
                </div>
            </div>
            <div class="action">
                <input type="submit" class="action-button" value="Add User">
            </div>
        </form>
        <div class="card-info">
        </div>
    </div>
</div>

<script type="text/javascript">
    var typeObject = @Html.Raw(Model.ListItems);
</script>
<script type="text/javascript" src="~/js/loadDepartments.js" asp-append-version="true"></script>