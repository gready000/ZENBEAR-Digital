@using ZENBEAR.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="https://static1.squarespace.com/static/5ef66d7f1de9065ae3cd8f2e/t/60b776e8297d2d2c20e289d5/1622648836361/" width="80" height="40"
                             class="me-3"
                             alt="MDB Logo"
                             loading="lazy" />
                        <small></small>
                    </a>
                    <ul class="nav justify-content-center">
                        @if (User.IsInRole(GlobalConstants.ITRole) || User.IsInRole(GlobalConstants.InfoSecRole))
                        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Open">&#128452; Manage Tickets</a>
            </li>}
                        @if (User.Identity.IsAuthenticated)
                        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="MyTickets">&#128451; MyTickets</a>
            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Create">&#128395; Create Ticket</a>
                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">&#128477; Privacy</a>
                                            </li>}
                        @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-dark" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    &#128218; Manage
                </a>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="All">Users</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Departments" asp-action="All">Departments</a></li>
                </ul>
            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    &#9999; Add
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Create">User</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Create">Role</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Issues" asp-action="Create">Issue</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Create">Project</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Jobtitles" asp-action="Create">Jobtitle</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Departments" asp-action="Create">Department</a></li>
                                </ul>
                            </li>}
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <style type="text/css">
        body {
            background-image: linear-gradient(135deg, tomato, rebeccapurple);
        }

        #footer {
            position: absolute;
            right: 0;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
            background-color: white;
        }
    </style>

    <footer id="footer" class="bg-light text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-2">
            © 2022 Copyright:
            <a class="text-dark" href="">ZenBear.com</a>
        </div>
        <!-- Copyright -->
    </footer>

    <script src="https://kit.fontawesome.com/a199d1b466.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>