@model ZENBEAR.Web.ViewModels.Tickets.CreateTicketinputModel
@using ZENBEAR.Data.Models.Enums

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/logoImport.css" asp-append-version="true" />

@{
    this.ViewData["Title"] = "Create Issue";
}

<div class="container">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-12 col-xs-12 p-4 mb-4 bg-white text-dark col-md-6 offset-md-2 edit_information">
        <form method="post" id="createTicket" enctype="multipart/form-data">
            <h3 class="text-center">@this.ViewData["Title"]</h3>
            <hr />
            <div id="childDiv" class="text-right" style="position:relative; left:-100px; top:190px;">
                <img src="https://static1.squarespace.com/static/5ef66d7f1de9065ae3cd8f2e/t/60b776e8297d2d2c20e289d5/1622648836361/" style="width: 185px;" alt="logo">
                <h4 class="mt-1 mb-5 pb-1"></h4>
            </div>
            <div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Project">Project*</label>
                            <select id="Project" asp-for="Project" class="form-control">
                                <option value="" selected="selected">Select Project</option>
                            </select>
                            <span asp-validation-for="Project" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Issue">Issue Type*</label>
                            <select id="Issue" asp-for="Issue" class="form-control">
                                <option value="" selected="selected">Select Issue</option>
                            </select>
                            <span asp-validation-for="Issue" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label asp-for="Summary">Summary*</label>
                        <input asp-for="Summary" type="text" class="form-control" placeholder="Summary..." />
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label asp-for="Description">Description*</label>
                        <textarea asp-for="Description" class="form-control" rows="6" placeholder="Description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone Number.." />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="Priority">Priority*</label>
                        <select asp-for="Priority" class="form-control" asp-items="@Html.GetEnumSelectList<Priority>()"></select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label asp-for="Attachments"></label>
                    <input asp-for="Attachments" class="form-control" />
                    <span asp-validation-for="Attachments" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 submit">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Create">
                        <input type="button" class="btn btn-primary" value="Cancel" onclick="history.back()">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<hr/>

<script type="text/javascript">
    var typeObject = @Html.Raw(Model.ListItems);
</script>
<script type="text/javascript" src="~/js/loadProjects.js" asp-append-version="true"></script>