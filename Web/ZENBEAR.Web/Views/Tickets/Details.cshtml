@model ZENBEAR.Web.ViewModels.Tickets.AllTicketDetailsViewModel

<head>
    <script src="https://kit.fontawesome.com/a199d1b466.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/finishbutton.css">
    <link rel="stylesheet" href="~/css/comments.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<style>


    /* Style the tab */
    .tab {
        overflow: hidden;
    }

    /* Style the buttons inside the tab */
    .buttonLeft {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 10px 20px;
        transition: 0.3s;
        font-size: 17px;
        margin-left: 20px;
        margin-top: 10px;
    }

    #buttonRight {
        background-color: lightgreen;
        float: right;
        border: 1px solid;
        outline: none;
        cursor: pointer;
        padding: 10px 50px;
        transition: 0.3s;
        font-size: 17px;
        margin-right: 20px;
        margin-top: 10px;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: #ddd;
    }

    /* Create an active/current tablink class */
    .tab button.active {
        background-color: #ccc;
    }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }

    #element {
        display: inline-block;
        margin-left: 20px;
        margin-right: 10px;
        margin-top: 20px
    }

    #element1 {
        display: inline-block;
        margin-left: 40px;
        margin-right: 10px;
        margin-top: 30px
    }

    #element2 {
        display: normal;
        margin-left: 40px;
        margin-right: 10px;
        margin-top: 15px
    }

    #element3 {
        display: normal;
        margin-left: 30px;
        margin-right: 10px;
        margin-top: 30px;
    }


    #sides {
        margin: 0;
        overflow: hidden;
        background-color: white
    }

    #left {
        float: left;
        width: 70%;
        overflow: hidden;
    }

    #right {
        float: left;
        width: 29%;
        overflow: hidden;
        border: 1px solid #ccc;
        margin-top: 15px
    }

    td {
        padding: 15px;
        text-align: left;
        vertical-align: central;
        font-size: 15px;
        margin-top: 20px;
    }

    #details {
        display: inline-block;
        margin-left: 15px;
        margin-top: 30px;
    }

    #tr {
        margin-top: 30px;
    }

    .test {
        border: none;
        margin: 0;
        height: 60%;
        line-height: unset;
        font-size: 14px;
        width: 150px;
        margin-left: -1px;
    }

    #element4 {
        display: normal;
        margin-left: 10px;
    }

    .element5 {
        display: normal;
        margin-left: 40px;
        margin-right: 10px;
        margin-top: 15px
    }

    #assignee {
        display: inline-block;
        margin-left: 7px;
        margin-right: 40px;
        margin-top: 15px
    }

    #comment {
        margin-left: 10px;
        margin-right: 10px;
        margin-top: 30px
    }

    #commentHeding {
        display: inline-block;
        margin-left: 40px;
        margin-right: 10px;
        margin-top: 20px
    }

    #resolve {
        display: inline-block;
        margin-left: 500px;
        margin-right: 10px;
        margin-top: 20px
    }

    #backBtn {
        margin-top: 15px
    }

</style>


<body>
    <div id="sides">
        <div class="tab">
            <button id="backBtn" class="buttonLeft" onclick="history.back(-1)">&#8592; Back</button>
            <p id="element">&#9889; @Model.Ticket.IssueType Issue</p>
            <p id="element">&#9806; TI-@Model.Ticket.Id</p>
            @if (Model.Ticket.Status == "Open")
            {
                <form id="resolve" method="post" asp-action="Resolve" asp-route-ticketId="@Model.Ticket.Id">
                    <button type="submit" class="btn btn-success">Resolve Issue</button>
                </form>
            }
        </div>
        <hr />
        <div id="sides">
            <div id="left">
                <i class="fa-light fa-ballot-check"></i>
                <h4 id="element2"><i class="fa-solid fa-envelope-open-text"></i> @Model.Ticket.Summary</h4>
                <p id="element1">Priority</p>
                <p id="element1">&#10071;@Model.Ticket.Priority</p>
                <div id="element2">
                    <p>Attachments</p>
                    @if (Model.Ticket.Attachments != null)
                    {
                        @foreach (var item in Model.Ticket.Attachments)
                        {
                            var fileName = "/attachments/tickets/" + @item.Id + "." + @item.Extension;
                            <i class="fa-solid fa-paperclip"></i><a href="@fileName" download>Download </a>
                        }
                    }
                </div>
                <div id="element2">
                    <i class="fa-regular fa-keyboard"></i>
                    <textarea asp-for="Ticket.Description" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Ticket.Description" class="text-danger"></span>
                </div>

            </div>

            <div id="right">
                <h4 id="details">Details</h4>
                <hr />

                <form id="assignee" method="post" asp-action="Assignee" asp-route-ticketId="@Model.Ticket.Id" asp-route-assigneeId="@Model.AssigneeId">
                    <p id="assignee">Assignee</p>
                    <select onChange="this.form.submit()" asp-for="AssigneeId" class="test" asp-items="@Model.ListItems">
                        @if (Model.Ticket.Assignee != null)
                        {
                            <option value="" selected="selected">@Model.Ticket.Assignee</option>
                        }
                        else
                        {
                            <option value="" selected="selected">Unassigned</option>
                        }
                    </select>
                </form>

                <table class="table-fill">
                    <tbody class="table-hover">

                        <tr>
                            <td class="text-left">Reporter</td>
                            <td class="text-left">@Model.Ticket.Reporter.FullName</td>
                        </tr>
                        <tr>
                            <td class="text-left">Telephone</td>
                            <td class="text-left">No</td>
                        <tr>
                            <td class="text-left">Email</td>
                            <td class="text-left">@Model.Ticket.Reporter.Email</td>
                        </tr>
                        <tr>
                            <td class="text-left">Department</td>
                            <td class="text-left">@Model.Ticket.Reporter.Department</td>
                        </tr>
                        <tr>
                            <td class="text-left">Jobtitle</td>
                            <td class="text-left">@Model.Ticket.Reporter.Jobtitle</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <input type="hidden" asp-for="Ticket.Id" />
            <h5 id="commentHeding">Comments</h5>
            @if (Model.Ticket.Comments != null)
            {
                @foreach (var comment in Model.Ticket.Comments)
                {
                    <!-- Contenedor Principal -->
                    <div id="comment" class="comments-container">

                        <ul id="comments-list" class="comments-list">
                            <li>
                                <div class="comment-main-level">
                                    <!-- Contenedor del Comentario -->
                                    <div class="comment-box">
                                        <div class="comment-head">
                                            <h6 class="comment-name by-author">@comment.AddByUser</h6>
                                            <span>@comment.CreatedOn.ToString("dd/MM/yyyy HH:mm")</span>
                                            <i class="fa fa-reply"></i>
                                            <i class="fa fa-heart"></i>
                                        </div>
                                        <div class="comment-content">
                                            @comment.Content
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                }
            }
            <div id='buttons'>
                <button id="show" style="margin-left: 38px; margin-top: 20px;" type="button" class="btn btn-info">Press for Comment</button>
                <button id="hide" type="button" class="btn btn-light">Hide</button>
            </div>

            <form id='form' method="post" asp-action="Comment" asp-route-content="@Model.Content" asp-route-ticketId="@Model.Ticket.Id">
                <textarea asp-for="@Model.Content" class="element5" id='textarea' placeholder="Your Comment..."></textarea>
                <input id="element2" type="submit" class="btn btn-primary" value="Send">
            </form>

        </div>
        <hr />
        
    </div>
</body>

<script>
    
</script> 



<script>var show = document.getElementById('show');
    var hide = document.getElementById('hide');
    var form = document.getElementById('form');
    var textarea = document.getElementById('textarea');

    show.addEventListener('click', function () {
        form.style = ('display: block');
        textarea.style = ('animation: riseHeight 1s .1s normal forwards');
        hide.style = ('display: block');
        show.disabled = true;
    })

    hide.addEventListener('click', function () {
        form.style = ('display: none');
        hide.style = ('display: none');
        show.disabled = false;
    })</script>