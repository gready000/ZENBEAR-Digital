@model ZENBEAR.Web.ViewModels.Jobtitles.CreateJobtitleInputModel

<link rel="stylesheet" href="~/css/createForm.css" asp-append-version="true" />

<div class="container">
    <!-- code here -->
    <div class="card">
        <div class="card-image">
            <h2 class="card-heading">
                <small>Let's Add New Jobtitle</small>
            </h2>
        </div>
        <form method="post" class="card-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Jobtitle..." value="" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="DepartmentName">Department Name</label>
                <select asp-for="DepartmentName" class="form-control" asp-items="@Model.Departments">
                    <option value="" selected="selected">Select Department</option>
                </select>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="action">
                <input type="submit" class="action-button" value="Add Jobtitle">
            </div>
        </form>
        <div class="card-info">
        </div>
    </div>
</div>
