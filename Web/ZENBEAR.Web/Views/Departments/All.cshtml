@model IEnumerable<ZENBEAR.Web.ViewModels.Departments.AllDepartmentsViewModel>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>}


<div class="container" style="background-color: white">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Manage</b>
            </div>
            <div class="panel-body">
                <table class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Department</th>
                            <th>Jobtitles</th>
                            <th>Eployees</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @{ var counter = 0;}
                    <tbody>
                        @foreach (var item in Model)
                        {
                            counter++;
                            <tr data-toggle="collapse" data-target="#demo1_@counter" class="accordion-toggle">
                                <td><button class="btn btn-default btn-xs"><i class="fa fa-eye"></i></button></td>
                                <td>@item.DepartmentName</td>
                                <td>@item.JobtitlesCount</td>
                                <td>@item.DepartmentUsers</td>
                                <td>
                                    <a class="btn btn-success" asp-controller="Departments" asp-action="Edit" asp-route-id="@item.DepartmentId"><i class="fas fa-edit"></i></a>
                                    <a data-target="#DeleteModal-@counter" data-toggle="modal" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>

                                    @using (Html.BeginForm("DeleteAsync", "Departments", new { Id = item.DepartmentId }, FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="modal" tabindex="-1" role="dialog" id="DeleteModal-@counter">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Delete Confirmation</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete @item.DepartmentName department?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                                        <button type="submit" class="btn btn-danger">Yes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <td colspan="12" class="hiddenRow">
                                    <div class="accordian-body collapse" id="demo1_@counter">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr class="info">
                                                    <th>Jobtitle</th>
                                                    <th>Employees</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var job in item.Jobtitles)
                                                {
                                                    <tr>
                                                        <td>@job.JobtitleName</td>
                                                        <td>@job.JobtitleUsers</td>
                                                        <td>
                                                            <a class="btn btn-link" asp-controller="Jobtitles" asp-action="Edit" asp-route-id="@job.JobtitleId">Edit</a>
                                                            <a data-target="#DeleteModal-@job.JobtitleId" data-toggle="modal" class="btn btn-link">Delete</a>

                                                            @using (Html.BeginForm("DeleteAsync", "Jobtitles", new { Id = job.JobtitleId }, FormMethod.Post))
                                                            {
                                                                @Html.AntiForgeryToken()
                                                                <div class="modal" tabindex="-1" role="dialog" id="DeleteModal-@job.JobtitleId">
                                                                    <div class="modal-dialog" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title">Delete Confirmation</h5>
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                    <span aria-hidden="true">&times;</span>
                                                                                </button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <p>Are you sure you want to delete @job.JobtitleName jobtitle?</p>
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                                                                <button type="submit" class="btn btn-danger">Yes</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
